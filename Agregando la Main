int main()
{
    srand(time(NULL));

    Jugador *cabeza = nullptr;
    Jugador *nuevo = nullptr;
    Jugador *ultimo = nullptr;

    int cantidad;

    cout << "Ingrese la cantidad de jugadores: ";
    cin >> cantidad;

    for (int i = 0; i < cantidad; i++)
    {
        nuevo = new Jugador;

        cout << "\nNombre del jugador: ";
        cin >> nuevo->Nombre;

        cout << "Carnet del jugador: ";
        cin >> nuevo->Carnet;

        nuevo->jugada = 0;
        nuevo->eliminar = false;
        nuevo->puntos = 0;
        nuevo->sig = nullptr;

        if (cabeza == nullptr)
        {
            cabeza = nuevo;
            ultimo = nuevo;
        }
        else
        {
            ultimo->sig = nuevo;
            ultimo = nuevo;
        }
    }

    if (ultimo != nullptr)
        ultimo->sig = cabeza;

    jugar(cabeza);

    return 0;
}
