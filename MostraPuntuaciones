void mostrarPuntuaciones(Jugador *cabeza)
{
    if (cabeza == nullptr)
        return;

    cout << "\n===== PUNTUACIONES FINALES =====" << endl;

    Jugador *aux = cabeza;
    do
    {
        cout << "Jugador: " << aux->Nombre
             << " | Puntos: " << aux->puntos << endl;

        aux = aux->sig;
    } while (aux != cabeza);
}
